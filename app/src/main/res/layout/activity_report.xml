<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".report">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="370dp"
        android:layout_height="118dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"
        android:text="Choose your reason for reporting this person!"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="191dp"
        android:text="Not wearing mask" />

    <Button
        android:id="@+id/button2"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:text="Not following social-distancing" />

    <Button
        android:id="@+id/button3"
        android:layout_width="240dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="391dp"
        android:text="did not sanitize the used space" />
</RelativeLayout>